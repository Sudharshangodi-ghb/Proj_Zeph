/ {
    aliases {
        led0 = &led0;
        button0 = &button0;
    };

    leds {
        compatible = "gpio-leds";
        led0: led0 {
            gpios = <&gpioa 5 GPIO_ACTIVE_HIGH>;
            label = "Green LED";
        };
    };

    buttons {
        compatible = "gpio-keys";
        button0: button0 {
            gpios = <&gpioc 13 GPIO_ACTIVE_LOW>;
            label = "User Button";
        };
    };
};
