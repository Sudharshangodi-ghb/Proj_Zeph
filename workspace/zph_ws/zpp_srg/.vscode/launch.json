{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug STM32F446RE",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/zpp_srg/build/zephyr/zephyr.elf",
      "cwd": "${workspaceFolder}/zpp_srg",
      "MIMode": "gdb",
      "miDebuggerPath": "${workspaceFolder}/../Zephyr_sdk/arm-zephyr-eabi/bin/arm-zephyr-eabi-gdb.exe",
      "setupCommands": [
        { "text": "target remote localhost:3333" },
        { "text": "monitor reset halt" },
        { "text": "load" }
      ],
      "preLaunchTask": "West Build"
    }
  ]
}
