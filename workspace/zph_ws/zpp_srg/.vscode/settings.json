{
  "files.associations": {
    "*.c": "c",
    "*.cpp": "cpp",
    "*.h": "c",
    "*.hpp": "cpp"
  },
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "cmake.generator": "Ninja",
  "cmake.buildDirectory": "${workspaceFolder}/zpp_srg/build",
  "terminal.integrated.env.windows": {
    "ZEPHYR_BASE": "${workspaceFolder}/zephyr",
    "ZEPHYR_SDK_INSTALL_DIR": "${workspaceFolder}/Zephyr_sdk",
    "PATH": "${env:PATH};${workspaceFolder}/Zephyr_sdk/arm-zephyr-eabi/bin;C:/OpenOCD/openocd/bin"
  }
}
